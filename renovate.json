{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:recommended"
	],
	"kubernetes": {
		"fileMatch": [
			"backend/.+\\.yaml$"
		]
	},
	"packageRules": [
		{
			"matchUpdateTypes": [
				"minor",
				"patch"
			],
			"automerge": true
		}
	],
	"ignoreTests": true,
	"branchConcurrentLimit": 25
}
